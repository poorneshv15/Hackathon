<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rvce.hackathon.hackathon.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGNIN/SIGNUP"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="79dp"
            android:id="@+id/login"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="   Name"
            android:ems="13"
            android:id="@+id/editText"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:layout_below="@+id/login"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:textColorLink="@color/colorPrimary"
            android:textColorHint="@color/colorAccent"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint=" Password"
            android:ems="13"
            android:layout_marginTop="50dp"
            android:id="@+id/editText2"
            android:layout_below="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:layout_alignLeft="@id/editText"
            android:layout_alignRight="@id/editText"
            android:textColorHint="@color/colorAccent" />

        <TextView
            android:id="@+id/forgotPwdTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:gravity="end"
            android:layout_below="@id/editText2"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/forgotPwdTv"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/googleSignInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN WITH GOOGLE"
            android:layout_below="@+id/signInBtn"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp" />
        <TextView
            android:id="@+id/createAccTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Create an Account"
            android:layout_below="@+id/googleSignInBtn"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

</FrameLayout>
